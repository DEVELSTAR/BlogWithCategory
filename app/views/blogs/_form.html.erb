<%= form_for @blog do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_area :content %>

  <%#= f.text_field :category_id, :value => Category.first.id %>
  <%= f.select :category_id, Category.all.map{ |c| [c.category, c.id] } %>

  <%= f.submit %>
<% end %>